  border-radius: 2px;
}

.demo-popover-test-btns {
  display: flex;
  justify-content: space-around;
}
.am-popover-item{
  color: #333;
  height:64rpx;
  line-height: 64rpx;
  
}
.am-popover-inner{
box-shadow:0px 2px 4px 0px #EEEEEE,0px -2px 4px 0px #EEEEEE;
}


.demo-popover-test-btn {
  width: 45%;
}

.popover_view {
  width: 160rpx;
  height: 48rpx;
  margin-left: 30rpx;
  float: right;
  
}
.am-popover-item:hover{

  color:#FF584F; 
}

.am-popover-placement-topRight {
  right: 30rpx;
}


.popover_view  .img_view{
  height:48rpx;
  width: 26rpx;
