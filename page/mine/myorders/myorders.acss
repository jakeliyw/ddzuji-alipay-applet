.order {
  width: 100%;
  background-color: #fff;
  overflow: hidden;
}

.tab-content {
  background-color: #f7f7f7;
}

.tab-content .order-item {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  width: 100%;
  background-color: #fff;
  padding-bottom: 40rpx;
  margin-bottom: 20rpx;
}

.tab-content .order-item:last-of-type {
  margin-bottom: 0;
}

.tab-content .order-item .title-bar {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 90rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 90rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.tab-content .order-item .line {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 200%;
  height: 1px;
  background-color: #e6e6e6;
  transform: scale(.5);
  margin-left: -50%;
}

.tab-content .order-item .goods-des {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  width: 100%;
  height: 212rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.tab-content .order-item .goods-des .goods-img {
  width: 23%;
  height: 100%;
  padding-top: 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.tab-content .order-item .goods-des .goods-img .pic {
  width: 160rpx;
  height: 160rpx;
}

.tab-content .order-item .goods-des .content {
  width: 74%;
  height: 100%;
  padding-top: 30rpx;
  box-sizing: border-box;
}

.tab-content .order-item .content .goods-name {
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
  box-sizing: border-box;
}

.tab-content .order-item .content .other-pay {
  width: 100%;
  font-size: 24rpx;
  color: rgb(153, 153, 153);
  line-height: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 6rpx;
}

.tab-content .order-item .content .total-price {
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 14rpx;
  box-sizing: border-box;
}

.tab-content .order-item .content .zhima {
  width: 170rpx;
  height: 30rpx;
}

.order-lists .order-item .operation {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-start;
  width: 100%;
  height: 78rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.tab-content .order-item .operation .check-order {
  width: 160rpx;
  height: 48rpx;
  font-size: 24rpx;
  color: #FF584F;
  line-height: 48rpx;
  text-align: center;
  border: 1px solid #FF584F;
  border-radius: 24rpx;
  margin-top: 0rpx;
  margin-right: 30rpx;
}

.tab-content .order-item .operation .check-move {
  width: 160rpx;
  height: 48rpx;
  font-size: 24rpx;
  color: white;
  line-height: 48rpx;
  text-align: center;
  border: 0px solid #FF584F;
  border-radius: 24rpx;
  margin-top: 0rpx;
  margin-right: 30rpx;
  background: linear-gradient(90deg, rgb(255, 129, 85) 0%, rgb(255, 72, 77) 100%);
}

.tab-content .order-item .operation .check-order:active {
  color: #FF584F;
  border-color: #FF584F;
}

/* 没有订单 */

.goodsnolist {
  width: 89%;
  padding-top: 140rpx;
  margin: 0 auto;
  display: none;
}

.goodsnolist .listpic {
  width: 100%;
  height: 250rpx;
  text-align: center;
}

.goodsnolist .module image {
  width: 286rpx;
  height: 248rpx;
}

.goodsnolist .abnormal image {
  width: 281rpx;
  height: 250rpx;
}

.desc {
  text-align: center;
  color: #666666;
  font-size: 32rpx;
  line-height: 32rpx;
  margin: 20rpx 0 60rpx;
}

.button {
  width: 100%;
  height: 88rpx;
  border-radius: 100rpx;
  color: #ffffff;
  font-size: 36rpx;
  line-height: 88rpx;
  text-align: center;
  background: #00ac91;
}

.button:active {
  background-color: #03a68c;
}

.show {
  display: block;
}

/* 顶部手动滑动 */

.am-tabs-bar-tab {
  margin: 0rpx;
  width: 20%;
  /* padding: 0rpx 2%; */
}

/* 加载更多 */

.loadText {
  width: 100%;
  height: 70rpx;
  box-sizing: border-box;
  line-height: 70rpx;
  font-size: 26rpx;
  color: #999;
  line-height: 1;
  text-align: center;
}

.noLoading {
  height: 0rpx !important;
  display: none;
}

/* 顶部tab栏切换 */

.order {
  padding: 0 !important;
}

.order .page-section-demo {
  padding: 0rpx;
  /* position: fixed; */
  top: 0;
  /* z-index: 998; */
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.order .scroll-view_H {
  height: 80rpx;
  /* overflow: hidden; */
}

.order .scroll-view-item_H {
  width: auto;
  height: auto;
  padding: 20rpx 25rpx 0rpx;
  border-bottom: 4rpx solid transparent;
  box-sizing: border-box;
  position: relative;
  height: 90rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
}


.order .page-section-demo .active {
  color: #FF584F;
}

.order .page-section-demo .line {
  width: 88rpx;
  height: 4rpx;
  border-radius: 4rpx;
  background: linear-gradient(90deg, rgba(255, 129, 85, 1) 0%, rgba(255, 72, 77, 1) 100%);
  margin: 20rpx auto 0rpx;
}

.nolist_img {
  width: 100%;
  text-align: center;
}

.nolist_img image {
  width: 350rpx;
  height: 350rpx;
  margin: auto;
}

.nolist_view {
  color: #666666;
}

/* API-DEMO page/component/popover.css */

